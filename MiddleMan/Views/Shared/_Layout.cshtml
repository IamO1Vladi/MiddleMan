            <div class="container">
                <div class="row">
                    <div class="col-12 col-lg-3 footer-left">

                        <!-- Navbar Brand-->
                        <a class="navbar-brand" href="/">
                            <span class="brand">
                                <span class="featured">
                                    <span class="first">NEX</span>
                                </span>
