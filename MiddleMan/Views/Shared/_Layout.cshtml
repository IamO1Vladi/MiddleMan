</head>
<body class="home">
    <!-- Header -->
    <header id="header">

        <!-- Top Navbar -->
        <nav class="navbar navbar-expand top">
            <div class="container header">

                <!-- Navbar Items [left] -->
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="#" class="nav-link pl-0"><i class="fas fa-clock mr-2"></i>@TextConstants.OpenHoursText</a>
                    </li>
                </ul>

                <!-- Nav holder -->
                <div class="ml-auto"></div>

                <!-- Navbar Items [right] -->
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="#" class="nav-link"><i class="fas fa-phone-alt mr-2"></i>@TextConstants.PhoneNumber</a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link"><i class="fas fa-envelope mr-2"></i>@TextConstants.EmailAddress</a>
                    </li>
                </ul>

                <!-- Navbar Icons -->
                <ul class="navbar-nav icons">
                    <li class="nav-item social">
                        <a href=@TextConstants.FaceBookLink class="nav-link"><i class="fab fa-facebook-f"></i></a>
                    </li>
                    <li class="nav-item social">
                        <a href=@TextConstants.TwitterLink class="nav-link"><i class="fab fa-twitter"></i></a>
                    </li>
                    <li class="nav-item social">
                        <a href=@TextConstants.LinkInLink class="nav-link pr-0"><i class="fab fa-linkedin-in"></i></a>
                    </li>
                </ul>

            </div>
        </nav>

        <!-- Navbar -->
        <nav class="navbar navbar-expand navbar-fixed sub">
            <div class="container header">

                <!-- Navbar Brand-->
                <a class="navbar-brand light" href="/">
                    <span class="brand">
                        <span class="featured">
                            <span class="first">Vladi</span>
                        </span>
                        <span class="last">Niki</span>
                    </span>

                    <!--
                        Custom Logo
                        <img src="assets/images/logo.svg" alt="NEXGEN">
                    -->
                </a>

                <!-- Nav holder -->
                <div class="ml-auto"></div>

                <!-- Navbar Items -->
                <ul class="navbar-nav items">
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Index" class="nav-link">@TextConstants.HomeButtonName</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="About" asp-action="About" class="nav-link">@TextConstants.AboutButtonName </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a href="#" class="nav-link">@TextConstants.ServicesButtonName <i class="icon-arrow-down"></i></a>
                        <ul class="dropdown-menu">
                            <li class="nav-item"><a asp-controller="Service" asp-action="Service" class="nav-link">Service 1</a></li>
                            <li class="nav-item"><a  asp-controller="Service" asp-action="Service" class="nav-link">Service 2</a></li>
                            <li class="nav-item"><a asp-controller="Service" asp-action="Service" class="nav-link">Service 3</a></li>
                            <li class="nav-item"><a asp-controller="Service" asp-action="Service" class="nav-link">Service 4</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="smooth-anchor nav-link">@TextConstants.BlogButtonName</a>
                    </li>
                </ul>

                <!-- Navbar Icons -->
                <ul class="navbar-nav icons">
                    <li class="nav-item">
                        <a href="#" class="nav-link" data-toggle="modal" data-target="#search">
                            <i class="icon-magnifier"></i>
                        </a>
                    </li>
                </ul>

                <!-- Navbar Toggle -->
                <ul class="navbar-nav toggle">
                    <li class="nav-item">
                        <a href="#" class="nav-link" data-toggle="modal" data-target="#menu">
                            <i class="icon-menu m-0"></i>
                        </a>
                    </li>
                </ul>

                <!-- Navbar Action -->
                <ul class="navbar-nav action">
                    <li class="nav-item ml-3">

                        <a href="#contact" class="smooth-anchor btn ml-lg-auto primary-button">@TextConstants.GetInTouchButtonName</a>
                        
                    </li>
                </ul>
            </div>
        </nav>

    </header>
       
    @RenderBody()
    


    <!-- Footer -->
    <footer>

