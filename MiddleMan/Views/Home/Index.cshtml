@model MiddleManServices.ApiServices.QuickBase.ServiceModels.GetInTouchServiceModel

@{
    ViewData["Title"] = "Home Page";
}

<section id="slider" class="hero p-0">
    <div class="swiper-container no-slider animation slider-h-100 slider-h-auto alt">

        <div class="swiper-wrapper">

            <!-- Item 1 -->
            <div class="swiper-slide slide-center">

                <!-- Media -->
                <!-- This is a test image, after being provided a new one we will swap it with a constant value for the images-->
                <div class="parallax-y-bg" style="background-image:url('https://www.certum.ng/wp-content/uploads/2020/09/lagos-island-skyline-1920x943.x97602.jpg')"></div>

                <div class="slide-content row">
                    <div class="col-12 d-flex justify-content-start justify-content-md-end inner">
                        <div class="right alt pb-0 text-left">

                            <!-- Content -->
                            <h1 class="title effect-static-text">
                                <span class="pre-title m-0">@TextConstants.SubHeaderMessage</span>
                                @TextConstants.HeaderMessage
                            </h1>
                                    
                            
                                            
                                    <!-- Action -->
                                    <div class="col-12 input-group m-0 p-2 buttons">
                                        <div class="d-sm-inline-flex">
                                            <a href="#contact" class="smooth-anchor btn ml-lg-auto primary-button">@TextConstants.GetInTouchButtonName</a>
                                            <a asp-controller="About" asp-action="About" class="mt-4 mt-sm-0 ml-sm-3 btn outline-button">READ MORE</a>
                                        </div>
                                    </div>
                              
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- About -->
<section id="about" class="section-1 odd highlights image-right">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-6 pr-md-5 align-self-center text-center text-md-left text">
                <div data-aos="fade-up" class="row intro">
                    <div class="col-12 p-0">
                        <span class="pre-title m-auto m-md-0">@TextConstants.SubHeaderMessageAboutCompanySection</span>
                        <h2><span class="featured"><span>@TextConstants.FirstPartLogoName</span></span>@TextConstants.SecondPartLogoName</h2>
                        <p>@TextConstants.CompanySectionDescription</p>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6 pr-md-5 align-self-center text-center text-md-left text">
                <div class="row items">
                    <div data-aos="fade-up" class="col-12 col-md-6 p-0 pr-md-4 item">
                        <h4><i class="mr-2 icon-badge"></i>@TextConstants.CompanyValueOne</h4>
                        <p>@TextConstants.CompanyValueFourSummary</p>
                    </div>
                    <div data-aos="fade-up" class="col-12 col-md-6 p-0 item">
                        <h4><i class="mr-2 icon-lock"></i>@TextConstants.CompanyValueTwoHeader</h4>
                        <p>@TextConstants.CompanyValueTwoSummary</p>
                    </div>
                </div>
                <div class="row items">
                    <div data-aos="fade-up" class="col-12 col-md-6 p-0 item">
                        <h4><i class="mr-2 icon-note"></i>@TextConstants.CompanyValueThreeHeader</h4>
                        <p>@TextConstants.CompanyValueThreeSummary</p>
                    </div>
                    <div data-aos="fade-up" class="col-12 col-md-6 p-0 pr-md-4 item">
                        <h4><i class="mr-2 icon-graduation"></i>@TextConstants.CompanyValueFourHeader</h4>
                        <p>@TextConstants.CompanyValueFourSummary</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<!-- Services -->
<section id="services" class="section-2 offers">
    <div class="container">
        <div class="row intro">
            <div class="col-12 col-md-9 align-self-center text-center text-md-left">
                <span class="pre-title m-auto ml-md-0">@TextConstants.ServiceSectionSubHeader</span>
                <h2>@TextConstants.ServiceSectionHeader<span class="featured"><span>@TextConstants.ServiceSectionHeaderSpan</span></span></h2>
                <p>@TextConstants.ServiceSectionDescription</p>
            </div>
        </div>
        <div class="row justify-content-center items">
            <div class="col-12 col-md-3 item">
                <div class="card">
                    <i class="icon icon-organization"></i>
                    <h4>@TextConstants.ServiceOneHeader</h4>
                    <p>@TextConstants.ServiceOneSummary</p>
                    <a href="page-single-service-1.html"><i class="btn-icon pulse fas fas fa-arrow-right"></i></a>
                </div>
            </div>
            <div class="col-12 col-md-3 item">
                <div class="card">
                    <i class="icon icon-briefcase"></i>
                    <h4>@TextConstants.ServiceTwoHeader</h4>
                    <p>@TextConstants.ServiceTwoSummary</p>
                    <a href="page-single-service-1.html"><i class="btn-icon pulse fas fas fa-arrow-right"></i></a>
                </div>
            </div>
            <div class="col-12 col-md-3 item" style="height:323px;">
                <div class="card" style="height: 100%; display: flex; flex-direction: column; justify-content: space-between;">
                    <i class="icon icon-chart"></i>
                    <h4>@TextConstants.ServiceThreeHeader</h4>
                    <p>@TextConstants.ServiceThreeSummary</p>
                    <a href="page-single-service-1.html"><i class="btn-icon pulse fas fas fa-arrow-right"></i></a>
                </div>
            </div>
            <div class="col-12 col-md-3 item" style="height:323px;">
                <div class="card" style="height: 100%; display: flex; flex-direction: column; justify-content: space-between;">
                    <i class="icon icon-plane"></i>
                    <h4>@TextConstants.ServiceFourHeader</h4>
                    <p>@TextConstants.ServiceFourSummary</p>
                    <a href="page-single-service-1.html"><i class="btn-icon pulse fas fas fa-arrow-right"></i></a>
                </div>
            </div>
        </div>
    </div>
</section>


<!-- Process -->
<section id="process" class="section-3 process offers">
    <div class="container full">
        <div class="row text-center intro">
            <div class="col-12">
                <h2><span class="featured"><span>@TextConstants.WorkflowSectionHeader</span></span></h2>
                <p class="text-max-800">@TextConstants.WorkflowSectionDescription</p>
            </div>
        </div>
        <div class="row justify-content-center text-center items" style="cursor: default;">
            <div class="col-12 col-md-6 col-lg-2 item">
                <div class="step"><span>1</span></div>
                <h4>@TextConstants.WorkflowStepOneHeader</h4>
                <p>@TextConstants.WorkflowStepOneSummary</p>
            </div>
            <div class="col-12 col-md-6 col-lg-2 item">
                <div class="step"><span>2</span></div>
                <h4>@TextConstants.WorkflowStepTwoHeader</h4>
                <p>@TextConstants.WorkflowStepTwoSummary</p>
            </div>
            <div class="col-12 col-md-6 col-lg-2 item">
                <div class="step"><span>3</span></div>
                <h4>@TextConstants.WorkflowStepThreeHeader</h4>
                <p>@TextConstants.WorkflowStepThreeSummary</p>
            </div>
            <div class="col-12 col-md-6 col-lg-2 item">
                <div class="step"><span>4</span></div>
                <h4>@TextConstants.WorkflowStepFourHeader</h4>
                <p>@TextConstants.WorkflowStepFourSummary</p>
            </div>
            <div class="col-12 col-md-6 col-lg-2 item">
                <div class="step"><span>5</span></div>
                <h4>@TextConstants.WorkflowStepFiveHeader</h4>
                <p>@TextConstants.WorkflowStepFiveSummary</p>
            </div>
        </div>
    </div>
</section>


<!-- Information -->
<div id="informationPostsPlaceholder">
    <div class="informationLoader"></div>
</div>


<!-- Contact -->
<section id="contact" class="section-5 form contact">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-8 pr-md-5 align-self-center text">
                <div class="row intro">
                    <div class="col-12 p-0">
                        <span class="pre-title m-0">@TextConstants.GetInTouchSectionSubHeader</span>
                        <h2>@TextConstants.GetInTouchSectionHeader<span class="featured"><span>@TextConstants.GetInTouchSectionHeaderSpan</span></span></h2>
                        <p>@TextConstants.GetInTouchSectionSummary</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 p-0">
                        <form asp-controller="Home" asp-action="SendGetInTouchMessage" method="post" id="nexgen-simple-form" >
                            
                            <input type="hidden" name="section" value="nexgen_form">

                            <input type="hidden" name="reCAPTCHA">
                            <!-- Remove this field if you want to disable recaptcha -->
                            
                            <input asp-for="PhoneNumber" type="hidden" id="fullPhoneNumber">

                            <div class="row form-group-margin">
                                <div class="col-12 col-md-6 m-0 p-2 input-group">
                                    <input asp-for="Name" type="text"  class="form-control field-name" placeholder="Name">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="col-12 col-md-6 m-0 p-2 input-group">
                                    <input asp-for="Email" type="email"  class="form-control field-email" placeholder="Email">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="col-12 col-md-6 m-0 p-2 input-group">
                                    <input  type="tel" id="phone" class="form-control field-phone" placeholder="Phone">
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                                <div class="col-12 col-md-6 m-0 p-2 input-group">
                                    <i class="icon-arrow-down mr-3"></i>
                                    <select asp-for="ServiceType"  id="services-dropdown" class="form-control field-info">
                                        <option value="" selected disabled>Choose Service</option>
                                        <option>Find Supplier</option>
                                        <option>Organise a factory tour</option>
                                        <option>Find a job</option>
                                        <option>Find a university</option>
                                    </select>
                                    <span asp-validation-for="ServiceType" class="text-danger"></span>
                                </div>
                                <div id="industry-box" class="col-12 col-md-6 m-0 p-2 input-group" style="display: none">
                                    <input asp-for="Industry" type="text"  class="form-control field-industry" placeholder="Industry">
                                    <span asp-validation-for="Industry" class="text-danger"></span>
                                </div>
                                <div class="col-12 m-0 p-2 input-group">
                                    <textarea asp-for="InitialMessage" class="form-control field-message" placeholder="Message"></textarea>
                                </div>
                                 <div class="col-12 input-group m-0 p-2">
                                    <button type="submit" class="btn primary-button">@TextConstants.GetInTouchSectionButtonText</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="contacts">
                    <h4>@TextConstants.GetInTouchSectionDescriptionHeader</h4>
                    <p>@TextConstants.GetInTouchSectionDescriptionSummary</p>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="fas fa-phone-alt mr-2"></i>
                                @TextConstants.PhoneNumber
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="fas fa-envelope mr-2"></i>
                                @TextConstants.EmailAddress
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="fas fa-map-marker-alt mr-2"></i>
                                @TextConstants.GetInTouchSectionAddress
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>


